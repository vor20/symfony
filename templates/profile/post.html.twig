                <div class="card-body">
                    <h5 class="card-title">{{ collection.name }}</h5>
                    <h5 class="card-title">{{ collection.title }}</h5>
                    <p class="card-text">{{ collection.description }}</p>
                    <a href="{{ url('add', {id: collection.id}) }}" class="btn btn-primary">Add Item</a>
                    <a href="{{ url('add', {id: collection.id}) }}" class="btn btn-primary">Remove Item</a>
                </div>
            </div>
        </div>

    <div class="pos">
